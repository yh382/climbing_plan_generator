{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@contexts/*": [
        "src/contexts/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@/features/*": ["src/features/*"],
      "@/components/*": ["src/features/profile/components/*"],
      "@/store/*": ["src/store/*"],
      "@/lib/*": ["src/lib/*"],
      "@/assets/*": ["app/assets/*"]
    },
    "types": [
      "react",
      "react-native",
      "expo",
      "expo-router",
      "node"
    ]
  },
  "include": [
    "app",
    "index.ts",
    "index.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "app.config.ts",
    "lib",                             // ← 加上
    "components"
, "src/features", "src/store", "src/lib", "src/contexts"  ],
  "extends": "expo/tsconfig.base.json"
}
