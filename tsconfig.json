{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@contexts/*": [
        "app/contexts/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    },
    "types": [
      "react",
      "react-native",
      "expo",
      "expo-router"
    ]
  },
  "include": [
    "app",
    "index.ts",
    "index.tsx",
    "expo-env.d.ts",
    ".expo/types/**/*.ts",
    "lib",                             // ← 加上
    "components"
  ],
  "extends": "expo/tsconfig.base.json"
}
